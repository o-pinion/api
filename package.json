  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "@semantic-release/apm-config": "^9.0.1",
    "husky": "^9.0.11",
    "semantic-release": "^23.0.8",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  },
  "release": {
    "extends": "@semantic-release/apm-config"
