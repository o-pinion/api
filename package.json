{
  "name": "api-opinionated",
  "version": "0.0.1",
  "description": "Opinionated API utilities",
  "license": "MIT",
  "author": "Raphael Balet",
  "maintainers": [
    "raphael.balet@outlook.com"
  ],
  "main": "dist/index.js",
